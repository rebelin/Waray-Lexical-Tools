Rules

!"Remove suffix vowel with vowel-ending stem"
!i:0 <=> Vow %{VSUF%}:0 _ [ m | n ] ;

"Reduplicating Vowel"
%{V%}:Vy <=> _ [ : - Vowel: ]* Vx: ;
         where Vx in Vowel
               Vy in Vowel
        matched ;

"No Consonant Reduplication"
%{C1%}:0 <=> _ %{C2%}: %{V%}: %>: Vowel: ;

"Reduplicating First Consonant"
%{C1%}:Cy <=> _ %{C2%}: %{V%}: %>: Cx: ;
         where Cx in Cons
               Cy in Cons
        matched ;

"Reduplicating Second Consonant"
%{C2%}:Cy <=> %{C1%}: _ %{V%}: %>: Cons: Cx: ;
         where Cx in Cons
               Cy in Cons
        matched ;

